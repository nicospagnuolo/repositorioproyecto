<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="./images/logo-mercado-liebre.jpg" />
	
	<title> Mercado Liebre Argentina</title>
			<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="./css/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/app.css">
</head>
<body>
	<!-- Header -->
	<header class="main-header">
		<% if (locals.user != null) {%>
			<%- include('./partials/headerLogeado')%>
		<% }%>
		<% if (locals.user == null) {%>
			<%- include('./partials/header')%>
		<% }%>
	</header>
	<!-- /Header -->

	<!-- Datos del usuario -->
	
	
	<!-- /Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%= data.foto_perfil %>" alt="foto de perfil" class="foto-perfil">
				<h1 class="main-title"> <%= data.username %>
			</div>
			<% if (locals.user && user.id == data.id) {%>
				<div class="data-container col-6">
					<div class="d-flex align-items-center ">
							<br>
							<br>
							<a href="/users/profile-edit/<%=data.id%>">
								<i class="fas fa-cog"> Editar mi perfil</i>
							</a>
						</h1>
			<% }%>
			<% if (locals.user && user.id != data.id) {%>
				<a class="btn mt-3 ml-4" href="">SEGUIR</a>
			<% }%>
				</div>
				<div>
					<ul class="">
						<li>12
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% for( let i = 0; i < data.length; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="product.html">
							<figure class="product-box_image">
								<img src="images/products/default-image.png" alt="cafetera moulinex">
							</figure>
							<article class="product-box_data">
								<h2><%= data.userRel[i].nombre_del_producto %></h2>
								<p><%= data.userRel[i].descrip_producto %></p>
								<p>Comentarios: 12</p>
								
							</article>
						</a>
					</section>
				</div>
				<% } %>
			
		
			
		
			
			
			
			
		</div>
	</div>
	<!-- /Mis productos -->


	<!-- footer -->
	<footer class="main-footer">
		<%- include('./partials/footer')  %>
	</footer>
	<!-- /footer -->
</body>	
</html>