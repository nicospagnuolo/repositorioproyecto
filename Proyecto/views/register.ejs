<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="./images/logo-mercado-liebre.jpg" />

	<title> Mercado Liebre Argentina</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="./css/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/app.css">
</head>

<body>
	<!-- Header -->
	<header class="main-header">
		<% if (locals.user != null) {%>
			<%- include('./partials/headerLogeado')%>
		<% }%>
		<% if (locals.user == null) {%>
			<%- include('./partials/header')%>
		<% }%>
	</header>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Registrate</h2>
			</div>
			<!-- Show the "ultimos" products --> 
			<h2 class="col-12"> <h1>Formulario de registro</h1>
				<form action="/users/register" method="post">
				  <label for="email">Email:</label>
				  <input type="email"  name="email" placeholder="juanperez@correo.com"><br>
			     <br>
				  <label for="username">Nombre de usuario:</label>
				  <input type="text" name="username" placeholder="juan33"><br>
				  <br>
				  <label for="password">Contrase√±a:</label>
				  <input type="password" name="password" ><br>
				  <br>
				  <label for="birthdate">Fecha de nacimiento:</label>
				  <input type="date"  name="birthdate"><br>
				  <br>
				  <label for="id">DNI:</label>
				  <input type="text"  name="dni" placeholder="12.345.678"><br>
				  <br>
				  <label for="username">Foto de perfil:</label>
				  <input type="text"  name="perfil"><br>
				  <br>
				  <input type="submit" value="Registrase">
				</form>
				<% if (locals.errors) { %>
					<p style="color:red"> <%= errors.message %></p>
				<% } %>
			
			</h2>

	<!-- footer -->
	<footer class="main-footer">
		<%- include('./partials/footer')  %>
	</footer>
	<!-- /footer -->
</body>
</html>