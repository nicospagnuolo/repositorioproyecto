<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="./images/logo.jpeg" />

	<title>Mi Tiendita</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="./css/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="/stylesheets/app.css">
</head>

<body>
	<!-- Header -->
	<header class="main-header">
		<% if (locals.user != null) {%>
			<%- include('./partials/headerLogeado')%>
		<% }%>
		<% if (locals.user == null) {%>
			<%- include('./partials/header')%>
		<% }%>
	</header>
	<!-- /Header -->
	
	<!-- Novedades -->
		<h2 class="products-title">Editar mi perfil</h2>
			<!-- Show the "ultimos" products -->
            <!-- Show the "ultimos" products -->
            <h2 class="col-12"> 
                <form action="/users/update/<%= user.id %>" method="post">
                    <input type="text" name="id" hidden value="<%= user.id %>">
                    <label for="email">Email:</label>
                    <input type="email"  name="email" placeholder="<%= data.email %>"><br>
                   <br>
                    <label for="username">Nombre de usuario:</label>
                    <input type="text" name="username" placeholder="<%= data.username %>"><br>
                    <br>
                    <label for="birthdate">Fecha de nacimiento:</label>
                    <input type="date"  name="birthdate"><br>
                    <br>
                    <label for="id">DNI:</label>
                    <input type="text"  name="dni" placeholder="<%= data.dni %>"><br>
                    <br>
                    <label for="username">Foto de perfil:</label>
                    <input type="text"  name="perfil" placeholder="<%= data.foto_perfil %>"><br>
                    <br>
                    <input type="submit" value="Editar">
                  </form>
            </h2>
    <% if (locals.errors) { %>
        <p style="color:black"> <%= errors.message %></p>
    <% } %>
	
	


	<!-- footer -->
	<footer class="main-footer">
		<%- include('./partials/footer')  %>
	</footer>
	<!-- /footer -->
</body>

</html>